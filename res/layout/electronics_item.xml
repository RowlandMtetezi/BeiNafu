<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@layout/listselector"
    android:orientation="horizontal"
    android:padding="5dip"
    tools:ignore="SpUsage,ContentDescription" >

    <!-- Item Name -->

    <TextView
        android:id="@+id/itemElectronicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test_string"
        android:textColor="#7E354D"
        android:textSize="20dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <!-- Item Seller -->

    <TextView
        android:id="@+id/itemElectronicSeller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test_string"
        android:textColor="#7E354D"
        android:textSize="20dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <!-- Item Price -->

    <TextView
        android:id="@+id/itemElectronicPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test_string"
        android:textColor="#7E354D"
        android:textSize="20dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <!-- Seller Contact -->

    <TextView
        android:id="@+id/sellerElectronicContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test_string"
        android:textColor="#7E354D"
        android:textSize="20dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <!-- Seller Location -->

    <TextView
        android:id="@+id/sellerElectronicLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test_string"
        android:textColor="#7E354D"
        android:textSize="20dip"
        android:textStyle="bold"
        android:typeface="sans" />
    
    <ImageView
        android:id="@+id/arrow_selection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/arrow" />

</RelativeLayout>